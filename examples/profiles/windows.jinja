{% set py_ver = os.environ["CONAN_CPYTHON_VERSION"] %}
{% set py_tag = "cp" + py_ver.replace(".", "") %}
{% set cpython_versions = {"3.10": "3.10.19", "3.11": "3.11.14", "3.12": "3.12.12", "3.13": "3.13.11", "3.14": "3.14.2", "3.15": "3.15.0a5"} %}
{% set cpython_ref = "cpython-portable/" + cpython_versions.get(py_ver, "3.12.12") %}
{% set wheel_arch = "win_amd64" if platform.machine() in ("AMD64", "x86_64") else "win32" %}
include(default)

[tool_requires]
&:{{ cpython_ref }}

[buildenv]
WHEEL_PYVER={{ py_tag }}
WHEEL_ABI={{ py_tag }}
WHEEL_ARCH={{ wheel_arch }}
